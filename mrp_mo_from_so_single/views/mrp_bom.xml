<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_mrp_bom_form" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[1]" position="inside">
                <group>
                    <field name="product_width" string="Width"/>
                    <field name="product_length" string="Height"/>
                    <field name="product_area" string="Area"/>
                    <field name="area_type" string="Select Area" widget="radio"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>



